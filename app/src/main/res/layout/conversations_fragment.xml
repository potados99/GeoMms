<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="vm" type="com.potados.geomms.feature.conversations.ConversationsViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/conversation_list_root_layout"
            android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/empty_view"
            style="@style/TextSecondary"
            android:text="@string/start_a_new_conversation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="56dp"
            app:layout_constraintBottom_toTopOf="@+id/snackbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="invisible" />

        <!-- Conversations -->
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/conversations"
                android:layout_width="0dp"
                android:layout_height="0dp"
                tools:listitem="@layout/conversation_list_item"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:conversations="@{vm.conversations}"
                app:searchResults="@{vm.searchResults}"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/snackbar"/>

        <!-- Default app hint -->
        <include
                android:id="@+id/snackbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inflatedId="@id/snackbar"
                layout="@layout/main_hint"
                app:vm="@{vm}"
                app:layout_constraintBottom_toTopOf="@id/syncing"/>

        <!-- Sync progress -->
        <include
                android:id="@+id/syncing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inflatedId="@id/syncing"
                layout="@layout/main_syncing"
                app:vm="@{vm}"
                app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
    
</layout>
