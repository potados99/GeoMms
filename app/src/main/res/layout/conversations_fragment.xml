<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable name="vm" type="com.potados.geomms.feature.conversations.ConversationsViewModel"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/conversation_list_root_layout"
            android:animateLayoutChanges="true">

        <!-- 툴바 -->
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                style="@style/Toolbar"
                android:animateLayoutChanges="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                app:contentInsetStartWithNavigation="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <TextView
                    android:id="@+id/toolbar_title"
                    style="@style/ToolbarText"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/title_conversations"
            />

        </androidx.appcompat.widget.Toolbar>

        <!-- 컨텐츠 레이아웃 -->
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/conversations"
                android:layout_width="0dp"
                android:layout_height="0dp"
                tools:listitem="@layout/conversation_item"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:conversations="@{vm.conversations}"
                app:layout_constraintTop_toBottomOf="@+id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/snackbar"/>

        <!-- 기본앱 설정 안내창 -->
        <include
                android:id="@+id/snackbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inflatedId="@id/snackbar"
                layout="@layout/main_permission_hint"
                app:vm="@{vm}"
                app:layout_constraintBottom_toTopOf="@id/syncing"/>

        <!-- 동기화 상태창 -->
        <include
                android:id="@+id/syncing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inflatedId="@id/syncing"
                layout="@layout/main_syncing"
                app:vm="@{vm}"
                app:layout_constraintBottom_toBottomOf="parent" />

        <!-- 툴바 그림자 -->
        <View
                android:layout_width="0dp"
                android:layout_height="8dp"
                android:background="@drawable/ab_shadow"
                app:layout_constraintTop_toBottomOf="@id/toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/toolbar_shadow"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    
</layout>
