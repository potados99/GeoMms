<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/conversation_list_root_layout"
        android:background="?attr/selectableItemBackground">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_list_item_sender_name"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/message_list_item_avatar"
            android:layout_marginStart="16dp"
            tools:text="Sender"/>

    <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/avatar_default"
            android:id="@+id/message_list_item_avatar"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:civ_border_width="0dp"
            app:civ_circle_color="@color/transparent"/>

    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/message_list_item_body"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="64dp"
            android:maxLines="2"
            app:layout_constraintStart_toEndOf="@+id/message_list_item_avatar"
            android:layout_marginStart="16dp"
            tools:text="Lorem ipsum dolor amit yeah yeah yeah Lorem ipsum dolor amit yeah yeah yeah yeah yeah"
            app:layout_constraintTop_toBottomOf="@+id/message_list_item_sender_name"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent" android:lines="2"
            android:minLines="2"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_list_item_time"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp"
            android:textSize="14sp"
            tools:text="11:23 PM"/>

    <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/message_list_item_unread"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:src="@drawable/circle"
            android:visibility="invisible"
            tools:visibility="visible"
            app:civ_border_width="0dp"
            app:civ_circle_color="@color/transparent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
