<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:context=".feature.location.MapFragment">


    <com.google.android.gms.maps.MapView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/map_view"/>

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:id="@+id/fragment_map_bottom_sheet_view"
            app:layout_behavior="@string/bottom_sheet_behavior"
            app:behavior_hideable="false"
            app:behavior_peekHeight="@dimen/bottom_sheet_peek_height"
            app:behavior_fitToContents="false"
            android:background="@drawable/top_rounded">

        <include layout="@layout/fragment_map_bottom_sheet"/>

    </FrameLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@android:drawable/ic_menu_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/fragment_map_add_button"
            app:layout_anchor="@id/fragment_map_bottom_sheet_view"
            app:layout_anchorGravity="end"
            android:layout_margin="20dp"
            app:backgroundTint="@android:color/white"
    />


</androidx.coordinatorlayout.widget.CoordinatorLayout>