<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppThemeLight"/>

    <!-- Text -->
    <style name="TextPrimary">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/textPrimary</item>
    </style>
    <style name="TextSecondary">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">@dimen/textSecondary</item>
    </style>
    <style name="TextTertiary">
        <item name="android:textColor">@color/textTertiary</item>
        <item name="android:textSize">@dimen/textTertiary</item>
    </style>



    <style name="Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="ToolbarText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">@dimen/textToolbar</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?android:attr/windowBackground</item>
        <item name="itemIconTint">@color/navigation_item</item>
        <item name="itemTextColor">@color/navigation_item</item>
    </style>

</resources>
